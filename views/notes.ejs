<% include partials/header%>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Notify App </h1>
			<p>A notes sharing app!</p>
			<p>Notes submitted by amazing Teachers and Students like you!</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/notes/new">Add new notes</a>
			</p>
		</div>	
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% notes.forEach(function(note){%>
			<div class="col-12 col-sm-6 col-md-4 col-lg-3">
				<div class="btn-group btn-group-justified">
					<a href="<%=note.pdflink%>"><%= note.subName%></a>
				</div>
			</div>
		<%});%>
	</div>
</div>
<% include partials/footer%>
